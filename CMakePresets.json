{
    "version" : 3,
    "cmakeMinimumRequired" : {
        "major" : 3,
        "minor" : 25,
        "patch" : 0
    },

    "configurePresets" : [
        {
            "name" : "debug",
            "displayName" : "Debug",
            "generator" : "Unix Makefiles",
            "binaryDir" : "${sourceDir}/builds/debug",
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Debug",
                "BUILD_TESTING" : "ON",
                "BUILD_DEB" : "OFF",
                "BUILD_RPM" : "OFF",
                "BUILD_FREEBSD" : "OFF"
            }
        },

        {
            "name" : "release",
            "displayName" : "Release",
            "generator" : "Unix Makefiles",
            "binaryDir" : "${sourceDir}/builds/release",
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Release",
                "BUILD_DEB" : "OFF",
                "BUILD_RPM" : "OFF",
                "BUILD_FREEBSD" : "OFF",
                "SET_OPTIMIZATIONS" : "ON"
            }
        },

        {
            "name" : "release-tests",
            "displayName" : "Release (with tests)",
            "generator" : "Unix Makefiles",
            "binaryDir" : "${sourceDir}/builds/release",
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Release",
                "BUILD_TESTING" : "ON",
                "BUILD_DEB" : "OFF",
                "BUILD_RPM" : "OFF",
                "BUILD_FREEBSD" : "OFF",
                "SET_OPTIMIZATIONS" : "ON"
            }
        },

        {
            "name" : "release-deb",
            "displayName" : "Release (only .deb packages)",
            "generator" : "Unix Makefiles",
            "binaryDir" : "${sourceDir}/builds/release",
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Release",
                "BUILD_DEB" : "ON",
                "BUILD_RPM" : "OFF",
                "BUILD_FREEBSD" : "OFF",
                "SET_OPTIMIZATIONS" : "ON"
            }
        },

        {
            "name" : "release-rpm",
            "displayName" : "Release (only .rpm packages)",
            "generator" : "Unix Makefiles",
            "binaryDir" : "${sourceDir}/builds/release",
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Release",
                "BUILD_DEB" : "OFF",
                "BUILD_RPM" : "ON",
                "BUILD_FREEBSD" : "OFF",
                "SET_OPTIMIZATIONS" : "ON"
            }
        },

        {
            "name" : "release-freebsd",
            "displayName" : "Release (freebsd)",
            "generator" : "Unix Makefiles",
            "binaryDir" : "${sourceDir}/builds/release",
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Release",
                "BUILD_DEB" : "OFF",
                "BUILD_RPM" : "OFF",
                "BUILD_FREEBSD" : "ON",
                "SET_OPTIMIZATIONS" : "ON"
            }
        }
    ],

    "buildPresets" : [
        {
            "name" : "debug",
            "configurePreset" : "debug"
        },

        {
            "name" : "debug-multi",
            "configurePreset" : "debug",
            "jobs" : 0
        },

        {
            "name" : "release",
            "configurePreset" : "release"
        },

        {
            "name" : "release-multi",
            "configurePreset" : "release",
            "jobs" : 0
        },

        {
            "name" : "release-tests",
            "configurePreset" : "release-tests",
            "jobs" : 0
        },

        {
            "name" : "release-deb",
            "configurePreset" : "release-deb"
        },

        {
            "name" : "release-rpm",
            "configurePreset" : "release-rpm"
        },

        {
            "name" : "release-freebsd",
            "configurePreset" : "release-freebsd"
        }
    ],

    "testPresets" : [
        {
            "name" : "debug",
            "configurePreset" : "debug",
            "environment" : {
                "CTEST_TEST_ARGS" : "--gtest_brief=1"
            }
        },

        {
            "name" : "debug-heavy",
            "configurePreset" : "debug",
            "environment" : {
                "RUN_HEAVY_GTEST" : "1",
                "CTEST_TEST_ARGS" : "--gtest_brief=1"
            }
        },

        {
            "name" : "release-tests",
            "configurePreset" : "release-tests",
            "environment" : {
                "CTEST_TEST_ARGS" : "--gtest_brief=1"
            }
        }
    ]
}
